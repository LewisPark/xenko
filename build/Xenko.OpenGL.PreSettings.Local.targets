<!-- Build file pre-included by all Xenko projects -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <SiliconStudioCommonPreSettingsName>Xenko</SiliconStudioCommonPreSettingsName>

    <!--  Defines the API used by Xenko - Values are Direct3D/Null/OpenGL/OpenGLES -->
    <XenkoGraphicsApi Condition=" '$(XenkoGraphicsApi)' == '' ">OpenGL</XenkoGraphicsApi>
    <SiliconStudioXenkoGraphicsApi>$(XenkoGraphicsApi)</SiliconStudioXenkoGraphicsApi>

    <!-- Defines the platform used by Xenko - Values are Windows/WindowsStore/WindowsPhone/Android/iOS...etc. -->
    <SiliconStudioPlatform Condition=" '$(SiliconStudioPlatform)' == '' ">Windows</SiliconStudioPlatform>
    <SiliconStudioUI Condition=" '$(SiliconStudioUI)' == '' ">OPENTK</SiliconStudioUI>
    <!-- Comment the line below and uncomment this to have the OpenGL implementation target SDL
    <SiliconStudioUI Condition=" '$(SiliconStudioUI)' == '' ">SDL;OPENTK</SiliconStudioUI>
    <SiliconStudioAudio>SDL</SiliconStudioAudio>
    -->
  </PropertyGroup>
</Project>
