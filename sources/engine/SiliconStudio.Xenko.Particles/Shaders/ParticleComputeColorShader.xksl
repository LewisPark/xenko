namespace SiliconStudio.Xenko.Rendering
{

class ParticleComputeColorShader<bool UsesSoftEdgeDerived> : ParticleBase<UsesSoftEdgeDerived>
{
    // -------------------------------------
    // streams
    // -------------------------------------
    compose ComputeColor  baseColor;

    //compose ComputeColor  baseIntensity;

    // Shading of the sprite
    stage override float4 Shading()
    {
        // -----------------------------------------------
        // Base particle color
        // -----------------------------------------------        
        float4 finalColor = base.Shading() * baseColor.Compute();
//        finalColor.x = 1;
//        finalColor.a = 0.1;

        //// -----------------------------------------------
        //// Color intensity------------------------------
        //finalColor.rgb *= baseIntensity.Compute().rrr;

        return finalColor;
    }
};

}
